<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
            http://www.springframework.org/schema/util
            http://www.springframework.org/schema/util/spring-util-3.0.xsd">

    <util:properties id="socialAuthProperties">
        <prop key="googleapis.com.consumer_key">${PPINOT_GOOGLE_KEY}</prop>
        <prop key="googleapis.com.consumer_secret">${PPINOT_GOOGLE_SECRET}</prop>
        <prop key="graph.facebook.com.consumer_key">${PPINOT_FACEBOOK_KEY}</prop>
        <prop key="graph.facebook.com.consumer_secret">${PPINOT_FACEBOOK_SECRET}</prop>
        <prop key="graph.facebook.com.custom_permissions">email</prop>
    </util:properties>
</beans>